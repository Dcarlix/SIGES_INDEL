@model IEnumerable<SIGES_INDEL.Models.Estudiante>
@{
    ViewData["Title"] = "Listado de Estudiantes";
}

<h1 class="text-center">Estudiantes</h1>
<div class="row my-3">
    <div class="col-auto">
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <span class="d-flex align-items-baseline">
                    <input type="number" name="Buscar" value="@ViewData["Buscar"]" placeholder="Buscar Estudiante segun NIE" class="form-control" />
                    <input type="submit" value="Buscar" class="btn btn-success mx-2" />
                    <a asp-action="Index" class="btn btn-secondary d-inline"><i class="bi bi-person-lines-fill"></i></a>
                </span>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de Estudiantes</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblEstudiantes">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(t => t.NIE)</th>
                                    <th>@Html.DisplayNameFor(t => t.NombreCompleto)</th>
                                    <th>@Html.DisplayNameFor(t => t.Edad)</th>
                                    <th>@Html.DisplayNameFor(t => t.Telefono)</th>
                                    <th>Grado Actual</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var estudiante in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(t => estudiante.NIE)</td>
                                        <td>@Html.DisplayFor(t => estudiante.NombreCompleto)</td>
                                        <td>@Html.DisplayFor(t => estudiante.Edad)</td>
                                        <td>@Html.DisplayFor(t => estudiante.Telefono)</td>
                                        <td>
                                            @{
                                                var ultimaMatricula = estudiante.Matriculas
                                                .OrderByDescending(m => m.FechaMatricula)
                                                .FirstOrDefault();
                                            }
                                            @if (ultimaMatricula != null)
                                            {
                                                @ultimaMatricula.Grados.Abreviacion
                                            }
                                            else
                                            {
                                                <span class="text-muted">Sin Matricular</span>
                                            }
                                        </td>

                                        <td>
                                            <a class="btn btn-primary" asp-action="Detalle" asp-route-id="@estudiante.Id">Detalles</a>
                                            <a class="btn btn-secondary" asp-action="Editar" asp-route-id="@estudiante.Id">Modificar</a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@estudiante.Id" >Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h1>Oops..... Sucedio Algo mal</h1>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


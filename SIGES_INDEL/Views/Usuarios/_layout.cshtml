<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] SIGES INDEL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/SIGES_INDEL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="fondo-svg">
    <div class="container">
        <div class="row text-center my-2">
            <h1 class="display-3">SIGES INDEL</h1>
        </div>
        <div class="row text-center my-1">
            <div class="col-2"></div>
            <div class="col-4 text-center px-3">
                <img src="~/images/control.jpg"
                     alt="Sistema de control Estudiantil"
                     class="m-2"
                     style="max-width: 300px; height: 300px; object-fit: cover; border-radius: 10px;" />
            </div>
            <div class="col-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


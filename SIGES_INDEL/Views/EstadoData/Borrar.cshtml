@model SIGES_INDEL.Models.Complementos.Estado
@{
    ViewData["Title"] = "Borrar Estado";
}
<form asp-action="Borrar" onsubmit="confirmarEliminacion(event)">
    <div class="container py-4">
        <h3 class="text-center mb-4 fw-bold">Borrar el Estado</h3>
        <div class="card shadow border-2 border-danger rounded-3 mb-4 glass">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <label asp-for="Estados" class="control-label"></label>
                                <input asp-for="Estados" class="form-control" disabled readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-danger">Eliminar Estado</button>
            <a class="btn btn-secondary mx-2" asp-controller="EstadoData" asp-action="Index">Regresar</a>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        function confirmarEliminacion(event) {
           event.preventDefault();
           Swal.fire({
               title: '¿Estás seguro?',
               text: "Esta Accion puede Causar muchos Problemas, Asegurate que no hay Expedientes con este Estado!!!!",
               icon: 'warning',
               showCancelButton: true,
               confirmButtonColor: '#d33',
               cancelButtonColor: '#3085d6',
               confirmButtonText: 'Sí, eliminar',
               cancelButtonText: 'Cancelar'
           }).then((result) => {
               if (result.isConfirmed) {
                   event.target.closest('form').submit();
               }
           });
        }
    </script>
}





@model IEnumerable<SIGES_INDEL.Models.Complementos.Grados>
@{
    ViewData["Title"] = "Grados";
}

<h1 class="text-center">Grados</h1>
<div class="row my-3">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="Crear" asp-controller="Grados" class="btn btn-success"><i class="bi bi-plus-circle"></i></a>
            <span class="fs-4 mx-2">Crear un Grado</span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card border-info">
            <div class="card-header bg-info">
                <h3><strong>Lista de Grados</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-success table-striped" id="tablaListar" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Grado)</th>
                                    <th>@Html.DisplayNameFor(m => m.Anno)</th>
                                    <th>@Html.DisplayNameFor(m => m.Seccion)</th>
                                    <th>@Html.DisplayNameFor(m => m.Abreviacion)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Grado)</td>
                                        <td>@Html.DisplayFor(m => item.Anno)</td>
                                        <td>@Html.DisplayFor(m => item.Seccion)</td>
                                        <td>@Html.DisplayFor(m => item.Abreviacion)</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>
                                            <a class="btn btn-info" asp-action="Detalle" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h1>No Hay Grados</h1>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


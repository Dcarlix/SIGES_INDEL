@model SIGES_INDEL.Models.Docente
@{
    List<SIGES_INDEL.Models.Complementos.Grados> xgrados = ViewBag.grados as List<SIGES_INDEL.Models.Complementos.Grados>;
}
@{
    ViewData["Title"] = "Infomacion docente";
}
<form asp-action="Editar" enctype="multipart/form-data">
    <div class="container py-4">
        <h3 class="text-center mb-4 fw-bold">Datos de @Model.NombreCompleto</h3>
        <div class="card shadow p-4 mb-4 bg-light border-2 border-info rounded-3" style="max-width: 900px; margin: auto;">
            <div class="card-body">
                <div class="row g-4 align-items-start">
                    <div class="col-md-3 d-flex justify-content-center align-self-stretch">
                        <label asp-for="ImagenDocenteArchivo" class="control-label"></label>
                        <input asp-for="ImagenDocenteArchivo" type="file" class="form-control" accept="image/*" onchange="mostrarPreview(event)" />
                        @if (Model.ImagenDocente != null)
                        {
                            <img id="previewImagen" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImagenDocente)"
                                 alt="Imagen de @Model.NombreCompleto"
                                 class="img-thumbnail m-2"
                                 style="max-width: 250px; height: 300px; object-fit: cover; border-radius: 10px;" />
                        }
                        else
                        {
                            <img id="previewImagen" src="~/images/default-avatar.png"
                                 alt="Previsualización"
                                 class="img-thumbnail m-2"
                                 style="max-width: 250px; height: 300px; object-fit: cover; border-radius: 10px;" />
                        }
                        <span asp-validation-for="ImagenDocenteArchivo" class="text-danger"></span>

                    </div>

                    <div class="col-md-9">
                        <div class="mb-4">
                            <label asp-for="NombreCompleto" class="control-label"></label>
                            <input asp-for="NombreCompleto" class="form-control" placeholder="Nombre completo" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="NIP" class="control-label"></label>
                                <input asp-for="NIP" type="number" class="form-control" />
                                <span asp-validation-for="NIP" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="GradosId" class="control-label"></label>
                                <select asp-for="GradosId" class="form-control">
                                    <option selected value="">Selecciona Grado que coordinara</option>
                                    @foreach (var item in xgrados)
                                    {
                                        <option value="@item.Id">@item.Abreviacion</option>
                                    }
                                </select>
                                <span asp-validation-for="GradosId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-start gap-3">
                            <button type="submit" class="btn btn-success">Guardar Cambios</button>
                            <a class="btn btn-secondary me-2" asp-controller="Docentes" asp-action="Index">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Función que muestra la previsualización al seleccionar una imagen
        function mostrarPreview(event) {
            const input = event.target;
            const file = input.files[0];
            const preview = document.getElementById('previewImagen');

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            } else {
                // Si el usuario quita la imagen, mostramos un avatar por defecto
                preview.src = '/images/default-avatar.png';
            }
        }
    </script>
}



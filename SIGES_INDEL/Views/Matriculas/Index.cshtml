@model IEnumerable<SIGES_INDEL.Models.Matriculas>
@{
    ViewData["Title"] = "Listado de Matriculas";
}

<h1 class="text-center">Matriculas</h1>
<div class="row my-3">
    <div class="col-auto">
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <span class="d-flex align-items-baseline">
                    <label for="Buscar" class="form-label">Buscar Matricula segun NIE de estudiante</label>
                    <input type="number" name="Buscar" value="@ViewData["Buscar"]" class="form-control" />
                    <input type="submit" value="Buscar" class="btn btn-success mx-2" />
                    <a asp-action="Index" class="btn btn-secondary d-inline"><i class="bi bi-person-lines-fill"></i></a>
                </span>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de Matriculas</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblMatriculas">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(t => t.Id)</th>
                                    <th>@Html.DisplayNameFor(t => t.FechaMatricula)</th>
                                    <th>@Html.DisplayNameFor(t => t.EstudianteId)</th>
                                    <th>@Html.DisplayNameFor(t => t.GradoId)</th>
                                    <th>@Html.DisplayNameFor(t => t.EstadoId)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var matricula in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(t => matricula.Id)</td>
                                        <td>@Html.DisplayFor(t => matricula.FechaMatricula)</td>
                                        <td>@Html.DisplayFor(t => matricula.EstudianteId)</td>
                                        <td>@Html.DisplayFor(t => matricula.GradoId)</td>
                                        <td>@Html.DisplayFor(t => matricula.EstadoId)</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Detalle" asp-route-id="@matricula.Id">Detalles</a>
                                            <a class="btn btn-primary" asp-action="Editar" asp-route-id="@matricula.Id">Modificar</a>
                                            <a class="btn btn-primary" asp-action="Borrar" asp-route-id="@matricula.Id">Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h1>No hay Matriculas</h1>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



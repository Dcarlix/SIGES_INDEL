@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> SinInManager

<ul style="list-style:none;">

    @if (SinInManager.IsSignedIn(User))
    {
        <li>
            <div>
                <form asp-action="Logout" asp-controller="Usuarios">
                    <div class="d-flex gap-3 justify-content-center align-items-center" style="height: 100%;">
                        <span class="fw-bold">@User.Identity.Name</span>
                        <button type="submit" class="btn btn-info text-dark">Salir <i class="bi bi-door-open"></i></button>
                    </div>
                </form>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Registro">Registro</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Login">Login</a>
        </li>
    }

</ul>

